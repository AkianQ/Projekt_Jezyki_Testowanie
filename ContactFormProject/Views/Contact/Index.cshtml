@model ContactFormProject.Models.ContactModel

<div class="contact-card">
    <h2 class="text-center mb-4">Skontaktuj się z nami</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Imie" class="form-label">Imię</label>
            <input asp-for="Imie" class="form-control" />
            <span asp-validation-for="Imie" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Wiadomosc" class="form-label">Wiadomość</label>
            <textarea asp-for="Wiadomosc" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Wiadomosc" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Wyślij wiadomość</button>
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            @ViewBag.Message
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
